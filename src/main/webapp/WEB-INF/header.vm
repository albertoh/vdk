<div id="header">
    <div class="title"  style="float:left;">
        <a href="./"><span style="font-size:32px;color:black;font-weight:bold;">$i18n.application.title</span></a>
        <br/>
        <div class="subtitle" >$i18n.header.title</div>
    </div>
    <div style="float:right;">
        #if($logControl.logged)
            <a href="logout.vm?redirectURL=index.vm" title="logout">user: $logControl.loggedName </a>
        #else
            #if($request.queryString)
                #set($reqAddr = $esc.url($request.queryString))
            #else
                #set($reqAddr = '.')
            #end
            <a href="redirect.vm?redirectURL=$reqAddr">login</a>
        #end
     </div>
    
    <select style="display:none;" id="langSelector" onchange="K5.i18n.askForDictionary( $('#langSelector').val() )">
        <option #if($i18n.language == 'cs')selected="selected" #end>cs</option>
        <option #if($i18n.language == 'en')selected="selected" #end>en</option>
    </select>
    
</div>